{% extends 'layouts/base.html.twig' %}

{% block body %}
    <div class="row h-100">
        <div class="col-md-12">
            <div class="card w-50 mt-5 mx-auto" style="width: 25rem;">
                <div class="card-header">
                    <h3 class="h3 mb-3 font-weight-normal align-content-center">Identify:</h3>
                </div>

                <div class="card-body">
                    {% if app.request.query.get('error') %}
                        <div class="alert alert-danger">{{ app.request.query.get('error') }}</div>
                    {% endif %}

                    <form method="post" action="{{ path('app_identify') }}">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="form-group">
                            <label for="inputEmail" class="">Email</label>

                            <input type="email" value="{{ app.request.query.get('username')|default('') }}"
                                   name="username" id="inputEmail" class="form-control" placeholder="Email"
                                   required autofocus>
                        </div>

                        <button class="btn btn-lg btn-primary" type="submit">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}